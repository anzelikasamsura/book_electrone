<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.App.CornerSize20" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>



    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:typeface">sans</item>
    </style>


    <style name="HeadingStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:layout_marginHorizontal">36dp</item>

        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">12dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>



    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardHeadingStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardTextStyle">
        <item name="android:textSize">10sp</item>
    </style>



    <style name="MarginApp">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:padding">0dp</item>

        <item name="android:fitsSystemWindows">true</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- VIEWS -->

    <style name="BUTTON_MINI">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>

        <item name="android:background">#00000000</item>
        <item name="android:scaleType">centerCrop</item>

        <item name="android:padding">6dp</item>
        <item name="android:layout_marginHorizontal">2dp</item>

        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>


    <style name="SEPARATOR">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:background">?attr/colorAccent</item>
        <item name="android:alpha">0.1</item>
    </style>
    <style name="SEPARATOR_V">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>

        <item name="android:layout_marginVertical">6dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>

        <item name="android:background">?attr/colorAccent</item>
        <item name="android:alpha">0.1</item>
    </style>


    <style name="HEADER">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>

        <item name="android:paddingHorizontal">8dp</item>
    </style>





    <style name="EDIT_TEXT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>

        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="USER_INFO_LABEL">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BOOK_INFO_LABEL">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>





    <style name="ITEM_BOTTOM_MENU">
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>

        <item name="android:textSize">16sp</item>

        <item name="android:layout_marginHorizontal">12dp</item>
    </style>
    <style name="ITEM_BOTTOM_MENU_IMAGE">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>

        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">centerCrop</item>

        <item name="android:layout_marginEnd">16dp</item>

        <item name="android:radius">10dp</item>
        <item name="android:alpha">0.4</item>
    </style>





    <style name="LABEL_EMPTY">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:gravity">center</item>

        <item name="android:padding">32dp</item>
    </style>



</resources>